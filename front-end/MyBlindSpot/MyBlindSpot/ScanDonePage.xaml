<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBlindSpot.ScanDonePage"
             Title="ScanDonePage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <VerticalStackLayout>
        <Label Text="YOUR PHOTO"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="10" />

        <Button Text="Save in Storage" Clicked="SaveNewItem_Click" Margin="10" />
        <Button Text="RETAKE" Clicked="Retake_Click" Margin="10" />

        <ContentView WidthRequest="500" HeightRequest="500">
            <Image x:Name="picture" ></Image>
        </ContentView>
        <Label x:Name="evaluation" FontSize="20" />
    </VerticalStackLayout>

</ContentPage>
