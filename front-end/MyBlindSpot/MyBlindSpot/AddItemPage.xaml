<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBlindSpot.AddItemPage"
             Title="AddItemPage">
    <Grid x:Name="mainLayout">
        <Label 
            Text="ADD YOUR ITEM" 
            HorizontalOptions="Center"
            Padding="0,5,0,15"
            FontSize="45"
            TextColor="#42BBFF" 
            FontFamily="BlackItalic"/>
        
        <Grid x:Name="mainGrid" Margin="30,140,30,0"/>

        <FlexLayout Grid.Row="1" Direction="Column" BackgroundColor="Transparent">
                    <Button Text="TAKE ME BACK"
                            WidthRequest="300"
                            HeightRequest="70"
                            FontSize="30"
                            Margin="80,320,140,20"
                            BackgroundColor="#42BBFF"
                            Clicked="Back_Click"/>
                </FlexLayout>


    </Grid>
</ContentPage>