<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBlindSpot.AddItemPage"
             Title="AddItemPage">
    <VerticalStackLayout x:Name="mainLayout">
        <Label 
            Text="ADD YOUR ITEM" 
            HorizontalOptions="Center"
            Padding="0,5,0,15"
            FontSize="45"
            TextColor="#42BBFF" 
            FontFamily="BlackItalic"/>
        
        <Grid x:Name="mainGrid"/>

        <VerticalStackLayout Padding="0,390,0,0">
           <Line Stroke="Black" X2="1000"/>

           <Button     
               Text="TAKE ME BACK"
                  FontSize="40"
               HorizontalOptions="Center"
               TextColor="Black"
               FontFamily="BlackItalic"
               BackgroundColor="Transparent"
               Margin="4"
               Clicked="Back_Click"/>
           
       </VerticalStackLayout>


    </VerticalStackLayout>
</ContentPage>