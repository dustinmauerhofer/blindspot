<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBlindSpot.BlindMenuPage"
             Title="BlindMenuPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <VerticalStackLayout>
                <Grid>
                    <Label
         Text="BLIND
         PERSON" 
         HorizontalTextAlignment="Center"
         FontSize="50"
         TextColor="#42BBFF"
         FontFamily="BlackItalic"
         Margin="0,30,0,0"/>
                </Grid>


                <Label Text="{Binding RecognitionText}"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" 
                        FontSize="24"/>

                <Button Text="Listen"
    Command="{Binding RecognitionText}"
    HorizontalOptions="Center"
    VerticalOptions="Center"/>

                <Button Text="Listen Cancel"
    Command="{Binding ListenCancelCommand}"
    HorizontalOptions="Center"
    VerticalOptions="Center"/>

                <Button Text="Back to Main" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>